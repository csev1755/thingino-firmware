#!/bin/sh

. /etc/init.d/rc.common

start() {
	starting_batch
	modulename=$(envvar wlandev)
	moduleopts="$(envvar wlandevopts)"
	gpionum="$(envvar gpio_wlan)"
	mac_address=$(envvar wlanmac)

	wlandev_check || { disabled; exit 0; }

	if [ -n "$gpionum" ]; then
		num=${gpionum%[oO]}
		state=${gpionum#$num}

		case "$state" in
			O)
				gpio_cmd="high"
				;;
			o)
				gpio_cmd="low"
				;;
		esac

		printf "%-35s" " Set GPIO $num $gpio_cmd"
		gpio $gpio_cmd $num 2>&1 | log && ok || fail
	fi

	#FIXME Assume that we are SDIO, and we need to insert
	printf "%-35s" " Send INSERT to MMC1"
	mmc 1 2>&1 | log && ok || fail

	if ! grep -q "^$modulename " /proc/modules; then
		printf "%-35s" " Load module $modulename"
		modprobe $modulename $moduleopts 2>&1 | log && ok || fail
	fi

	sleep 1

	if [ -n "$mac_address" ]; then
		printf "%-35s" " Set MAC address $mac_address"
		ip link set dev wlan0 address $mac_address 2>&1 | log && ok || fail
	fi
}

case "$1" in
	start)
		start
		;;
	stop)
		true
		;;
	*)
		die 1 "Usage: $0 {start}"
		;;
esac

exit 0
