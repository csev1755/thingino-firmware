#!/bin/sh

. /etc/init.d/rc.common

devip=$(envvar devip)

start() {
	starting
	[ -z "$devip" ] && disabled
	[ -z "$(envvar debug)" ] && disabled

	if ! grep -q /var/www /etc/mtab; then
		rm -r /var/www | log
		mkdir /var/www | log
		mount -t nfs -o nolock,tcp,nfsvers=3 ${devip}:/srv/nfs/www /var/www | log
	fi
	ok
}

stop() {
	stopping
	if grep -q /var/www /etc/mtab; then
		umount /var/www | log
		rm -r /overlay/var/www | log
		mount -o remount / | log
	fi
	ok
}

case "$1" in
	start|stop)
		$1
		;;
	restart|reload)
		stop
		sleep 1
		start
		;;
	*)
		die 1 "Usage: $0 {start|stop|restart|reload}"
esac
